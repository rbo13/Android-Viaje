<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_horizontal_margin_md">

    <ImageView
        android:id="@+id/ads"
        android:layout_width="@dimen/activity_horizontal_margin_xlg"
        android:layout_height="@dimen/activity_vertical_margin_xlg"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/shop_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/adTitle"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textSize="@dimen/font_size_default_s"/>

    <TextView
        android:id="@+id/adTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/ads"
        android:textSize="@dimen/font_size_default_s"
        android:padding="@dimen/activity_horizontal_margin_s"/>

    <TextView
        android:id="@+id/adText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ads"
        android:textSize="@dimen/font_size_default_s" />

</RelativeLayout>